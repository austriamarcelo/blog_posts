<%= form_with(model: blog_post, local: true) do |form| %>
  <% if blog_post.errors.any? %>
    <div class="alert alert-danger">
      <h4 class="alert-heading">
        <%= pluralize(blog_post.errors.count, "error") %> prohibited this blog post from being saved:
      </h4>
      <ul class="mb-0">
        <% blog_post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :author_name, class: "form-label" %>
    <%= form.text_field :author_name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :author_email, class: "form-label" %>
    <%= form.email_field :author_email, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :title, class: "form-label" %>
    <%= form.text_field :title, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :content, class: "form-label" %>
    <%= form.text_area :content, class: "form-control" %>
  </div>

  <%= form.submit class: "btn btn-primary" %>
<% end %>
